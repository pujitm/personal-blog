---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Base from "./BaseLayout.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<Base title={title} description={description}>
  <main class="mx-auto bg-stone-100 dark:bg-gray-800 p-4 rounded-xl shadow-xl md:p-24">
    <article class="prose prose-stone md:prose-lg text-black dark:prose-invert dark:text-stone-100">
      {heroImage && <img width={720} height={360} src={heroImage} class="mx-auto" alt="" />}
      <div class="mb-2">
        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <div>
              Updated on <time>{updatedDate}</time>
            </div>
          )
        }
      </div>

      <!-- <hr /> -->
      <slot />
    </article>
  </main>
</Base>
